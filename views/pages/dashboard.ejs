<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= dashboardTitle %></title>
    <link href="https://fonts.googleapis.com/icon?family=Material+Symbols+Sharp" rel="stylesheet" />
    <script src="https://cdn.plot.ly/plotly-2.16.1.min.js"></script>
    <!-- <script src="https://unpkg.com/mqtt/dist/mqtt.min.js"></script> -->
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <link rel="stylesheet" href="./style.css" />
  </head>
  <body>
    <div class="container">
      <aside>
        <div class="top">
          <div class="logo">
            <img src="images/logo.png" alt="" />
          </div>
          <div class="close" id="close-btn">
            <span class="material-symbols-sharp"> close </span>
          </div>
        </div>
        <div class="sidebar">
          <a href="/dashboard" class="active">
            <span class="material-symbols-sharp"> dashboard </span>
            <h3>Dashboard</h3>
          </a>
          <a href="/pintu1" class="active">
            <span class="material-symbols-sharp"> door_open </span>
            <h3>Inlet Gate</h3>
          </a>
          <a href="/pintu2" class="active">
            <span class="material-symbols-sharp"> door_open </span>
            <h3>Outlet Gate</h3>
          </a>
          <a method href="/logout" class="active">
            <span class="material-symbols-sharp"> logout </span>
            <h3>Logout</h3>
          </a>
        </div>
      </aside>
      <main>
        <h1><%= name %></h1>
        <h2><%= dashboardTitle %></h2>
        <h2>Connection Status Mandalika 1 : <span id="connection-status1">Checking connection...</span></h2>
        <h2>Connection Status Mandalika 2 : <span id="connection-status2">Checking connection...</span></h2>
        <h2>Status Inlet Water Level: <span id="status-inlet">Checking Status...</span></h2>
        <h2>Status Outlet Water Level: <span id="status-outlet">Checking Status...</span></h2>

        <div class="insights">
          <div class="pintu1">
            <div class="middle">
              <div class="left">
                <h3>Level Air Inlet</h3>
                <h1 id="pintu1"></h1>
              </div>
              <div class="icon">
                <span class="material-symbols-sharp"> height </span>
              </div>
            </div>
          </div>

          <div class="pintu2">
            <div class="middle">
              <div class="left">
                <h3>Level Air Outlet</h3>
                <h1 id="pintu2"></h1>
              </div>
              <div class="icon">
                <span class="material-symbols-sharp"> height </span>
              </div>
            </div>
          </div>
        </div>
        <!-- End of Insights -->
        <div class="histories">
          <h2>Historical Charts</h2>
          <div class="history-charts">
            <div id="pintu1-history" class="history-divs"></div>
            <div id="pintu2-history" class="history-divs"></div>
          </div>
        </div>
      </main>
      <div class="right">
        <div class="top">
          <button id="menu-btn">
            <span class="material-symbols-sharp"> menu </span>
          </button>
          <div class="theme-toggler" style="display: none">
            <span class="material-symbols-sharp active"> light_mode </span>
            <span class="material-symbols-sharp"> dark_mode </span>
          </div>
        </div>
      </div>
    </div>
    <script type="module" src="./page1.js"></script>
  </body>
</html>
